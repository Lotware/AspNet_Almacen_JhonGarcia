@using System.Data
@model DataTable

<h1>Consultar Movimientos</h1>
<form asp-action="Consultar" method="post">
    <label>Fecha Inicio:</label>
    <input type="date" name="fechaInicio" />

    <label>Fecha Fin:</label>
    <input type="date" name="fechaFin" />

    <label>Tipo Movimiento:</label>
    <input type="text" name="tipoMovimiento" />

    <label>Nro Documento:</label>
    <input type="text" name="nroDocumento" />

    <button type="submit">Consultar</button>
</form>

<h1>Registrar Movimiento</h1>
<form asp-action="Registrar" method="post">


    <label>COD_CIA:</label>
    <input type="text" name="COD_CIA" required />

    <label>COMPANIA_VENTA_3:</label>
    <input type="text" name="COMPANIA_VENTA_3" required />


    <label>ALMACEN_VENTA:</label>
    <input type="text" name="ALMACEN_VENTA" required />

    <label>TIPO_MOVIMIENTO:</label>
    <input type="text" name="TIPO_MOVIMIENTO" required />

    <label>TIPO_DOCUMENTO:</label>
    <input type="text" name="TIPO_DOCUMENTO" required />


    <label>Nro Documento:</label>
    <input type="text" name="NRO_DOCUMENTO" required />

    <label>COD_ITEM_2:</label>
    <input type="text" name="COD_ITEM_2" required />

    <label>Fecha Transacion:</label>
    <input type="date" name="FECHA_TRANSACCION" required />



    <button type="submit">Registrar</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (Model != null && Model.Rows.Count > 0)
{
    <h2>Resultados de la Consulta</h2>
    <table>
        <thead>
            <tr>
                <th>COD_CIA</th>
                <th>COMPANIA_VENTA_3</th>
                <th>ALMACEN_VENTA</th>
                <th>TIPO_MOVIMIENTO</th>
                <th>TIPO_DOCUMENTO</th>
                <th>NRO_DOCUMENTO</th>
                <th>COD_ITEM_2</th>


            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["COD_CIA"]</td>
                    <td>@row["COMPANIA_VENTA_3"]</td>
                    <td>@row["ALMACEN_VENTA"]</td>
                    <td>@row["TIPO_MOVIMIENTO"]</td>
                    <td>@row["TIPO_DOCUMENTO"]</td>
                    <td>@row["NRO_DOCUMENTO"]</td>
                    <td>@row["COD_ITEM_2"]</td>
                   
                </tr>
            }
        </tbody>
    </table>
}
